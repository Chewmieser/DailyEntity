<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<!-- Logo -->
			<a class="brand" href="/">
				DailyEntity
			</a>
			
			<!-- Navbar items -->
			<ul class="nav" id="navlinks">
				{{>navbar_links}}
				<li id="navLinkModify"><a href="#" onMouseOver="var icon=document.getElementById('pIcon');icon.className='icon-pencil icon-white';icon.style.opacity=.5" onMouseOut="var icon=document.getElementById('pIcon');icon.className='icon-pencil';icon.style.opacity=1" onClick="doEditNavBar()"><i id="pIcon" class="icon-pencil"></i></a></li>
			</ul>
			
			<ul class="nav pull-right">
				
				<!-- Notifications -->
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<i class="icon-envelope icon-white"></i> <sup id="noCount">{{notification_count}}</sup>
					</a>
					<ul class="dropdown-menu">
						<div id="notifications">{{>notifications}}</div>
						<li class="divider"></li>
						<li>
							<div class="row-fluid">
								<div class="span2">
									<a href="#" class=""><i class="icon-envelope"></i></a>
								</div>
								<!--<div class="span3"></div>-->
								<div class="span8">
									<a href="#" onClick="setBrowserNotify();"><i id="notificationsIndicator" class="icon-globe"></i></a>
								</div>
								<!--<div class="span3"></div>-->
								<div class="span2">
									<a href="#" onClick="clearNotifications();" class="pull-right"><i class="icon-trash"></i></a>
								</div>
							</div>
						</li>
					</ul>
				</li>
				
				<!-- Account menu -->
				<li class="dropdown" id="accountMenuDrop">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<i class="icon-user icon-white"></i> <span id="account_username">{{user_name}}</span> <b class="caret"></b>
					</a>
					<ul id="account_menu" class="dropdown-menu">
						{{>account_menu}}
					</ul>
				</li>
			</ul>
						
		</div>
	</div>
</div>